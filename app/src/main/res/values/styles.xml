<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:fitsSystemWindows">true</item>



    </style>

    <style name="toDoTheme" parent="AppTheme" >
        <item name="android:colorPrimary">@color/yellow_toolbar</item>
        <item name="android:colorPrimaryDark">@color/yellor_dark_status_bar</item>
        <item name="android:colorAccent">@color/yellow_toolbar</item>
        <item name="colorControlNormal">@color/yellow_toolbar</item>
        <item name="colorControlActivated">@color/yellow_toolbar</item>
        <item name="colorControlHighlight">@color/yellow_toolbar</item>
    </style>



    <!-- InputText style   -->
    <style name="TextLabel" parent="TextAppearance.AppCompat">

        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#fff</item>
        <item name="android:textSize">20sp</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->

        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">#e34b1c</item>
        <item name="colorControlActivated">#e34b1c</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/yellow_toolbar</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">@color/yellow_toolbar</item>

        //added attributes
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>

    </style>

</resources>
